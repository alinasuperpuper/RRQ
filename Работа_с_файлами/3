def print_even_and_odd_lines(filename):
    try:
        with open(filename, 'r', encoding='utf-8') as file:  # Открываем файл для чтения с помощью конструкции with, которая автоматически закрывает файл после использования
            lines = file.readlines()  # Считываем все строки из файла в список lines

            even_lines = []  # Создаем пустой список для чётных строк
            odd_lines = []  # Создаем пустой список для нечётных строк

            for index, line in enumerate(lines):  # Используем цикл for для прохода по всем строкам файла, используя функцию enumerate для получения индекса каждой строки
                if (index + 1) % 2 == 0:  # Проверяем, является ли индекс строки чётным, учитывая, что первая строка считается нечётной
                    even_lines.append(line.strip())  # Если индекс чётный, добавляем строку без пробельных символов в список чётных строк
                else:
                    odd_lines.append(line.strip())  # Если индекс нечётный, добавляем строку без пробельных символов в список нечётных строк

            # Выводим количество чётных строк
            print("Количество чётных строк:", len(even_lines))
            for line in even_lines:  # Выводим все чётные строки
                print(line)
            
            # Выводим количество нечётных строк
            print("Количество нечётных строк:", len(odd_lines))
            for line in odd_lines:  # Выводим все нечётные строки
                print(line)
    except FileNotFoundError:  # Обрабатываем исключение, если файл не найден
        print("Файл не найден")

# Указываем имя файла
filename = 'lines.txt'

# Вызываем функцию для вывода чётных и нечётных строк
print_even_and_odd_lines(filename)

# Чтобы изменить количество строк, необходимо изменить файл lines.txt, добавив или удалив существующие строки.
